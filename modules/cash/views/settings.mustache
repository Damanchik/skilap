<script type="text/javascript">
$(function() {	
	$("#dialog").dialog({
		position: ["left","top"],
		buttons: {
			"{{#i18n}}Apply{{/i18n}}": function() {
				var params = {
						curency: $('#acc_curency option:selected').val(),
					};
				var jqXHR = $.ajax({
					"type": "POST",
					"data": params,
					"url": "{{prefix}}/settings/update",
				});
				jqXHR.done(function(data){
					window.parent.$("body .iframeContainer").trigger('closeDialog');
				});
				jqXHR.fail(function(data){
					console.log(data);
					alert(data);
				});
			},			
			"{{#i18n}}Close{{/i18n}}": function() {
				//$(this).dialog("close");
				//console.log('closeDialog');
				window.parent.$("body .iframeContainer").trigger('closeDialog');
			}
		},
		open:function(e,ui){			
			var w = $(this).parent().width();
			var h = $(this).parent().height();
			var p = $(this).parent().position();
			$(this).parent().css({"top":0,"left":0,"padding":0,"border":0});
			window.parent.$("body .iframeContainer-ski_editSettings").trigger('openDialog',[w,h,p]);		
			console.log("{{values.currency.id}}");
			$('#acc_curency option[value="{{values.currency.id}}"]').attr('selected', 'selected');				
		},
		close:function(e,ui){
			window.parent.$("body .iframeContainer").trigger('closeDialog');
		},
		autoOpen: true,
		resizable: false,
		height: 320,
		width: 520,
		modal: true,
		dragable: true
	});	
});
</script>
<div id="dialog" title="{{#i18n}}Cash settings{{/i18n}}" style="width: 500px; height: 300px;">
	<form name="properties">
		<table>
			<tr>
				<td>{{#i18n}}Default Currency{{/i18n}}:</td>
				<td>
					<select name="acc_curency" id="acc_curency">
						{{>currencies_list}}
					</select>
				</td>
			</tr>
		</table>
	</form>
</div>

