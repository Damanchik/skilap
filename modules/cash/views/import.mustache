<div class="wizard">
	{{#GnuCash}}
	<div class="header">{{#i18n}}Import Gnu Cash{{/i18n}}</div>	
	{{/GnuCash}}
	{{#SkilapCash}}
	<div class="header">{{#i18n}}Import Skilap Cash{{/i18n}}</div>
	{{/SkilapCash}}
	<div class="notice">{{#i18n}}Attention! Your existing data will be overwritten upon complete.{{/i18n}}</div>	
{{#upload}}
	<script type="text/javascript">
		$(function(){
			$(".fakeUploadBrowse").click(function(){
				$("#upload-file").click();
			});
			$("#upload-file").change(function(){
				var filename = $(this).val().split('\\').pop();
				$(".fakeUploadInput").val(filename);
			});
		});
	</script>
	<div class="step-hint">{{#i18n}}Select file for import{{/i18n}}</div>	
	<form action="?step=1" enctype="multipart/form-data" method="post">
		<input id="upload-file" type="file" name="upload" style="visibility:hidden;" />			
		<input class="fakeUploadInput" readonly="readonly" />
		<button class="fakeUploadBrowse button" type="button" >{{#i18n}}Browse{{/i18n}}</button>
		<br><br>
		<button class="button" type="submit">{{#i18n}}Next{{/i18n}}</button>
	</form>	
{{/upload}}

{{#step1}}
<div class="step-hint">{{#i18n}}File parsed. It contains{{/i18n}}: {{transactions}} {{#i18n}}transactions{{/i18n}}, {{accounts}} {{#i18n}}accounts{{/i18n}}</div>
<form action="?step=2" enctype="multipart/form-data" method="post">
	<input type="hidden" name="fileName" value="{{path}}">
	<button type="submit" class="button" >{{#i18n}}Next{{/i18n}}</button>
</form>
{{/step1}}

{{#step2}}
<form action="{{prefix}}" enctype="multipart/form-data" method="get">
	<div class="step-hint">{{#i18n}}Data saved{{/i18n}}, {{transactions}} {{#i18n}}transactions{{/i18n}} {{#i18n}}and{{/i18n}} {{accounts}} {{#i18n}}accounts{{/i18n}} {{#i18n}}were imported{{/i18n}}!</div>
	<button type="submit" class="button" >{{#i18n}}Finish{{/i18n}}</button>
</form>
{{/step2}}

{{#error}}
<div class="notice">{{#i18n}}Wrong data. Please try again.{{/i18n}}</div>
{{/error}}
</div>
