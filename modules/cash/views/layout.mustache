	<script>
		$(document).ready(function(){
			$(".closeTab").on("click", function(e){
				var self = $(this);
				var jqXHR = $.ajax({
					"url": "{{prefix}}/close?pid=" + self.attr('pid'),
					"dataType": "json"
				});
				jqXHR.done(function(data){
					if (self.parent().hasClass("active")){
						location.href="{{prefix}}";
					} else {
						self.parent().parent().remove();
					}
				});
				jqXHR.fail(function(data){
				});
				e.preventDefault();
			});
		});
	</script>
</head>
<body>
	<div id="header">
		<a href='/' id="logo"></a>
		<div class="menu">{{>nav}}</div>
	</div>
	<div id="tabs">
		{{#tabs}}
			<div class="sl_border sl_border_radius">
			<span {{#selected}}class="{{activeTabClass}}"{{/selected}}>( <a href='{{url}}' pid="{{pid}}" class="closeTab">X</a> ) <a href='{{url}}'><span class="sl_text">{{name}}</span></a></span>
			</div>
		{{/tabs}}
	</div>
	<div id="workspace" class="sl_border">
		<content/>
	</div>
</body>
</html>
