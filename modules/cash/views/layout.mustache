<!DOCTYPE HTML>
<html lang="en-us">
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{{title}}</title>	
	 <!-- Le styles -->	
    <link href="/common/css/bootstrap.css" rel="stylesheet">    
    <link href="/common/css/main.css" rel="stylesheet">
    <link href="{{prefix}}/css/style.css" rel="stylesheet">
    <link href="/common/css/jquery-ui/jquery-ui-1.8.17.custom.css" rel="stylesheet">    
	<link href="/common/css/bootstrap-responsive.css" rel="stylesheet">
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->	

	<script type="text/javascript" src="/common/js/jquery-1.7.1.min.js"></script>
	<script type="text/javascript" src="/common/js/jquery-ui-1.8.17.custom.min.js"></script>
	<script type="text/javascript" src="{{prefix}}/js/jquery.skiGrid.js"></script>
	<script type="text/javascript" src="/common/js/jquery.ski.iframeContainer.js"></script>	
	<script type="text/javascript" src="/common/js/jsonrpcjs-0.1.7.min.js"></script>
	<script type="text/javascript" src="/common/js/bootstrap-button.js"></script>
	<script type="text/javascript" src="/common/js/bootstrap-dropdown.js"></script>
	<script type="text/javascript" src="/common/js/bootstrap-collapse.js"></script>
	<script type="text/javascript" src="/common/js/bootstrap-modal.js"></script>	

	<script type="text/javascript">
		$(document).ready(function() {
			$("#ski_editSettings").iframeContainer({src:"{{prefix}}/settings",host:"{{host}}"});		
			
			$("#editSettings").on("click", function(e){
				$("#ski_editSettings").iframeContainer("open");		
				return false;
			});
			
			$(".closeTab").on("click", function(e){			
				var self = $(this);
				var jqXHR = $.ajax({
					"url": "{{prefix}}/tabs/close?pid=" + self.parent().data('pid'),
					"dataType": "json"
				});
				jqXHR.done(function(data){
					if (self.parents("li").hasClass("active")){
						location.href="{{prefix}}";
					} else {
						self.parents("li").remove();
					}
				});
				jqXHR.fail(function(data){
				});
				e.preventDefault();
			});
		});
	</script>
</head>
<body>
	{{^mainLayoutHide}}
	<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
         <a href='/' id="logoNew"></a>
          <div class="nav-collapse">
			<ul class="nav nav-pills">
              {{>nav}}
              <li class="dropdown">
				<a href="javascript:void(0);" data-toggle="dropdown" class="dropdown-toggle">{{#i18n}}Tabs{{/i18n}} <b class="caret"></b></a>
				<ul class="dropdown-menu">				
				  {{#tabs}}
				  <li {{#selected}}class="active"{{/selected}}>
					<a data-toggle="tab" href="{{url}}" data-pid="{{pid}}">{{name}}</a>						
				  </li>
				  {{/tabs}}
				 </ul>
			  </li>
			</ul>          
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>   
    <div class="container-fluid">		
		<div class="row-fluid">
			<div class="span2 hidden-phone">				
					<ul class="nav nav-tabs nav-stacked ski_nav-tabs">
					  {{#tabs}}
					  <li {{#selected}}class="active"{{/selected}}>
						<a data-toggle="tab" href="{{url}}" data-pid="{{pid}}">{{name}} <i class="icon-remove closeTab"></i></a>						
					  </li>
					  {{/tabs}}
					</ul>					
			</div>
			<div class="span2 visible-phone">				
					<ul class="nav nav-tabs nav-stacked ski_nav-tabs">
					  {{#tabs}}
					  {{#selected}}
					  <li class="active">
						<a data-toggle="tab" href="{{url}}" data-pid="{{pid}}">{{name}} <i class="icon-remove closeTab"></i></a>						
					  </li>
					  {{/selected}}
					  {{/tabs}}
					</ul>					
			</div>
			<div class="span10">				
				<content/>				
			</div>
			 <div id="ski_editSettings"></div>
		</div>			
		<hr>
		<footer>
			<p>&copy; {{#i18n}}Copyright by PushOk Software{{/i18n}} 2011-2012</p>
		</footer>
    </div> 	
	{{/mainLayoutHide}}
	{{#mainLayoutHide}}
		<content/>
	{{/mainLayoutHide}}
</body>
</html>
