<div id="container" style="width: 100%; height: 700px;"></div>

<script type="text/javascript">
require(["jquery","jquery-block","bootstrap"], function ($) {
$(document).ready(function() {		
	var $page = $("body");	
	$(document).on("click", ".report-settings",function(evt){		
		evt.preventDefault();		
		$this = $(this);
		var $me = $page;
		$me.block();
		(function (cb) {
			require(['cash/reportsettings','safe','clitpl'], function (Modal,safe,tf) {
				var modal = new Modal();
				modal.show();
				modal.once('shown', function () { $me.unblock(); })
				modal.once('result', function (type, acc) {
					if (type!='saved') return;										
					modal.hide()
					cb();				
				})
			},cb)
		})(function (err) {
			if (err) appError(err);
			$me.unblock();
		})
		return false;				
	});	
});
})
</script>

