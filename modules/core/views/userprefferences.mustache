<script type="text/javascript">
$(document).ready(function() {
	$("#changePass").click(function(){
		$(".pass").toggle();
	});
	$("#editPrefferences").dialog({
		position: ["left","top"],
		buttons: {
			"apply": function() {
				var self = $(this);
				var updUser = {
					id: $("#uid").val(),
					firstName: $("#firstName").val(),
					lastName: $("#lastName").val(),
					login: $("#login").val(),
					timeZone: $("#timezone option:selected").val(),
					language: $("#language option:selected").val()
				};
				if ($("#changePass").is(":checked")) {
					updUser.oldPass = $("#oldPass").val();
					updUser.newPass = $("#newPass").val();
					updUser.reNewPass = $("#reNewPass").val();
				}
				var rpc = new jsonrpc.JsonRpc('/jsonrpc');
				rpc.call('core.saveUser', $("#token").val(), updUser, {
					success: function (data) {
						$("#caption").text("");
						window.parent.$("body").trigger('accountEditSuccess');
					},
					failure: function (reason) {
						console.log(reason);
						$("#caption").text(reason);
					}
				});
				window.parent.$("body .iframeContainer").trigger('closeDialog');
			},			
			"close": function() {
				window.parent.$("body .iframeContainer").trigger('closeDialog');
			}
		},
		open:function(e,ui){			
			if ($("#changePass").is(":checked"))
				$(".pass").show();
			else
				$(".pass").hide();
			var w = $(this).parent().width();
			var h = $(this).parent().height();
			var p = $(this).parent().position();
			$(this).parent().css({"top":0,"left":0,"padding":0,"border":0});
			window.parent.$("body .iframeContainer-ski_editUser").trigger('openDialog',[w,h,p]);						
		},
		close:function(e,ui){
			window.parent.$("body .iframeContainer").trigger('closeDialog');
		},
		autoOpen: true,
		resizable: false,
		height: 400,
		width: 620,
		modal: true,
		draggable: false
	});	
	
	function displayMessage(event){			
		if(event.data.name == 'setAccountEditDialogData'){
			var acc = event.data.data;
			console.log(acc);
			$("#uid").val(acc.id);
			$("#firstName").val(acc.firstName);
			$("#lastName").val(acc.lastName);
			$("#login").val(acc.login);
		}
	}
	
	if (window.addEventListener) {	
		window.addEventListener("message", displayMessage, false);
	}
	else {
		window.attachEvent("onmessage", displayMessage);
	}
});
</script>
