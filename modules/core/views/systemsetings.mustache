<script type="text/javascript">
$(document).ready(function() {
	$("#editPerm").click(function(){
		$("#editPermDialog").dialog("open");
	});
	$("#editPermDialog").dialog({
		position: ["center","center"],
		buttons: {
			"{{#i18n}}Apply{{/i18n}}": function() {
				var perms = [];
				$('.perm').filter(":checkbox:checked").each(function(index, checkbox) {
					perms.push($(checkbox).attr("value"));
				});
				var settings = {permissions: perms};
				var rpc = new jsonrpc.JsonRpc('/jsonrpc');
				rpc.call('core.saveSystemSettings', $("#token").val(), "guest", settings, {
					success: function (data) {
						$("#caption").text("");
						$(this).dialog("close");
						location.reload(true);
					},
					failure: function (reason) {
						console.log(reason);
						$("#caption").text(reason);
					}
				});
			},
			"{{#i18n}}Close{{/i18n}}": function() {
				$(this).dialog("close");
			}
		},
		autoOpen: false,
		resizable: false,
		height: 400,
		width: 350,
		modal: true,
		draggable: false
	});

	$("#openEditPref").click(function(){
		$("#editPrefDialog").dialog("open");
	});
	$("#editPrefDialog").dialog({
		position: ["center","center"],
		buttons: {
			"{{#i18n}}Apply{{/i18n}}": function() {
				var settings = {
					timeZone: $("#timezone option:selected").val(),
					language: $("#language option:selected").val()
				};
				var rpc = new jsonrpc.JsonRpc('/jsonrpc');
				rpc.call('core.saveSystemSettings', $("#token").val(), "guest", settings, {
					success: function (data) {
						$(this).dialog("close");
						location.reload(true);
					},
					failure: function (reason) {
						console.log(reason);
					}
				});
				$(this).dialog("close");
			},			
			"{{#i18n}}Close{{/i18n}}": function() {
				$(this).dialog("close");
			}
		},
		autoOpen: false,
		resizable: false,
		height: 200,
		width: 620,
		modal: true,
		draggable: false
	});	
});
</script>
