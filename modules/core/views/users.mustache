<script type="text/javascript">
$(document).ready(function() {
	$("#ski_editUser").iframeContainer({src:"{{prefix}}/userprefferences", host:"{{host}}"});
	$(".editUser").click(function(){
		var uid = $(this).attr('uid');
		var secret = $('#token').val();
		var rpc = new jsonrpc.JsonRpc('/jsonrpc');
		rpc.call('core.getUserById', secret, uid, {
			success: function (data) {
				var user = data[0];								
				$("#ski_editUser").iframeContainer("triggerEvent",{name:'setEditUserDialogData',data:user});
			},
			failure: function (reason) {
			},
		});		
		$("#ski_editUser").iframeContainer("open");
	});
	$(".deleteUser").click(function(){
		var uid = $(this).attr('uid');
		var secret = $('#token').val();
		var rpc = new jsonrpc.JsonRpc('/jsonrpc');
		rpc.call('core.deleteUser', secret, uid, {
			success: function (data) {
				console.log("success");
				console.log(data);
				location.reload(true);
			},
			failure: function (reason) {
				console.log("reason");
				console.log(reason);
			},
		});		
	});
	$("body").on('accountEditSuccess',function(e,id){
		location.reload(true);
	});
	$("#addUserDialog").dialog({
		position: ["center","center"],
		buttons: {
			"apply": function() {
				var self = $(this);
				var newUser = {
					id: $("#uid").val(),
					firstName: $("#firstName").val(),
					lastName: $("#lastName").val(),
					login: $("#login").val(),
					timeZone: $("#timezone option:selected").val(),
					language: $("#language option:selected").val()
				};
				newUser.pass = $("#pass").val();
				newUser.rePass = $("#rePass").val();
				var rpc = new jsonrpc.JsonRpc('/jsonrpc');
				rpc.call('core.saveUser', $("#token").val(), newUser, {
					success: function (data) {
						$("#caption").text("");
						self.dialog("close");
						location.reload(true);
					},
					failure: function (reason) {
						console.log(reason);
						$("#caption").text(reason);
					}
				});
			},
			"close": function() {
				$(this).dialog("close");
			}
		},
		autoOpen: false,
		resizable: false,
		height: 300,
		width: 630,
		modal: true,
		draggable: false
	});
	$("#addNewUser").click(function(){
		$("#addUserDialog").dialog("open");
	});
	
	$("span").css({
		 'padding' : '5px 20px',
		 'font-size' : '14px'
	});
	
	$("span.dummyDrop").styledButton({
		'orientation' : 'alone',
		'dropdown' : { 'element' : 'ul' },
		'role' : 'select',
		'defaultValue' : 'default value',
		'name' : 'dummy',
		'clear' : true
	});
	
	$.beautyOfCode.init('js/clipboard.swf');
	$("pre").beautifyCode('javascript');
});
</script>
<script type="text/javascript">
	var timeout         = 200;
	var closetimer		= 0;
	var ddmenuitem      = 0;

	function mopen(id) {	
		mcancelclosetime();
		if(ddmenuitem) ddmenuitem.style.visibility = 'hidden';
		ddmenuitem = document.getElementById(id);
		ddmenuitem.style.visibility = 'visible';
	};

	function mclose() { if(ddmenuitem) ddmenuitem.style.visibility = 'hidden'; };
	function mclosetime() { closetimer = window.setTimeout(mclose, timeout); };
	function mcancelclosetime() {
		if(closetimer) {
			window.clearTimeout(closetimer);
			closetimer = null;
		}
	};
</script>

