<script type="text/javascript">
$(document).ready(function() {
	$("a[name=\"editUser\"]").click(function(){
		$("#ski_editUser").iframeContainer({src:"{{prefix}}/userprefferences",host:"{{host}}"});
		var uid = $(this).attr('uid');		
		var rpc = new jsonrpc.JsonRpc('/jsonrpc');
		rpc.call('core.getUserById', '{{apiToken}}', uid, {
			success: function (data) {
				var user = data[0];				
				$("#ski_editUser").iframeContainer("triggerEvent",{name:'setEditUserDialogData',data:user});
			},
			failure: function (reason) {
			}
		});
		$("#ski_editUser").iframeContainer("open");
	});
	$("a[name=\"editPerm\"]").click(function(){
		$("#ski_editPermissions").iframeContainer({src:"{{prefix}}/userpermisions",host:"{{host}}"});
		var uid = $(this).attr('uid');		
		var rpc = new jsonrpc.JsonRpc('/jsonrpc');
		rpc.call('core.getUserById', '{{apiToken}}', uid, {
			success: function (data) {
				var user = data[0];								
				$("#ski_editPermissions").iframeContainer("triggerEvent",{name:'setEditPermDialogData',data:{uid: uid, permissions: user.permissions}});
			},
			failure: function (reason) {
			},
		});		
		$("#ski_editPermissions").iframeContainer("open");
	})
	$("a[name=\"deleteUser\"]").click(function() {
		if (!confirm("{{#i18n}}Are you sure?{{/i18n}}"))
			return false;
		var uid = $(this).attr('uid');		
		var rpc = new jsonrpc.JsonRpc('/jsonrpc');
		rpc.call('core.deleteUser', '{{apiToken}}', uid, {
			success: function (data) {
				console.log("success");
				console.log(data);
				location.reload(true);
			},
			failure: function (reason) {
				console.log("reason");
				console.log(reason);
			},
		});		
	});
	$("body").on('accountEditSuccess',function(e,id){
		location.reload(true);
	});
	$("body").on('permisionsEditSuccess',function(e,id){
		location.reload(true);
	});	
	$("#addUserDialog").dialog({
		position: ["center","center"],
		buttons: {
			"{{#i18n}}Apply{{/i18n}}": function() {
				var self = $(this);
				var newUser = {
					_id: $("#uid").val(),
					firstName: $("#firstName").val(),
					lastName: $("#lastName").val(),
					login: $("#login").val(),
					timeZone: $("#timezone option:selected").val(),
					language: $("#language option:selected").val()
				};
				newUser.password = $("#password").val();
				var rpc = new jsonrpc.JsonRpc('/jsonrpc');
				rpc.call('core.saveUser', '{{apiToken}}', newUser, {
					success: function (data) {
						self.dialog("close");
						location.reload(true);
					},
					failure: function (reason) {
						alert(reason);
					}
				});
			},
			"{{#i18n}}Close{{/i18n}}": function() {
				$(this).dialog("close");
			}
		},
		autoOpen: false,
		resizable: false,
		height: 300,
		width: 630,
		modal: true,
		draggable: false
	});
	$("button[name=\"addNewUser\"]").click(function(){
		$("#addUserDialog").dialog("open");
	});	
	
	$(".preflink").on("click", function(){
		$(this).parent().find(".prefmenu").toggleClass("active");
	});
	
	$(document).on("click", function(e){
		if (($(e.target).parents(".prefmenu.active").length == 0) && (($(e.target).parents(".preflink").length == 0))) {
			$(".prefmenu").removeClass("active");
		}
	});
});
</script>
